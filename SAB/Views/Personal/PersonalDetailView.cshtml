@using SAB.Domain.User
@{
    ViewBag.Title = "Detalle Personal";
}

<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li class="active">Personal </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-md-12 title">
        <h1>Detalle Personal</h1>
    </div>
</div>
@{UserAccount usuario = (UserAccount)ViewData["usuario"];}
<div class="col-md-10">

    <div class="form-group">
        <div class="row">
            <div class="col-md-6">
                <label for="exampleInputEmail1">Código</label>
                <input type="text" class="form-control" id="exampleInputEmail1" placeholder="" disabled="disabled" value="@usuario.Id">
            </div>
            <div class="col-md-6">
                <label for="exampleInputEmail1">Nombres</label>
                <input type="text" class="form-control" id="exampleInputEmail1" placeholder="" disabled="disabled" value="@usuario.Name">
            </div>
            
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-md-6">
                <label for="exampleInputEmail1">Apellido Paterno</label>
                <input type="text" class="form-control" id="exampleInputEmail1" placeholder="" disabled="disabled" value="@usuario.Lastname1">
            </div>

            <div class="col-md-6">
                <label for="exampleInputEmail1">Apellido Materno</label>
                <input type="text" class="form-control" placeholder="" disabled="disabled" value="@usuario.Lastname2">
            </div>


        </div>
    </div>
    <div class="form-group">
        <div class="row">
           
            <div class="col-md-6">
                <label for="exampleInputEmail1">Tipo Documento</label>
                <input type="text" class="form-control" id="exampleInputEmail1" placeholder="" disabled="disabled" value="@usuario.Document.Name">
            </div>
           

            <div class="col-md-6">
                <label for="exampleInputEmail1">Numero Documento</label>
                <input type="text" class="form-control" id="exampleInputEmail1" placeholder="" disabled="disabled" value="@usuario.NumeroDocumento">
            </div>


        </div>
    </div>

   

    <div class="form-group">
        <div class="row">
            
            <div class="col-md-6">
                <label for="exampleInputEmail1">Tipo Empleado</label>
                <input type="text" class="form-control" id="exampleInputEmail1" placeholder="" disabled="disabled" value="@usuario.TipoPerfil.Name">
            </div>

            <div class="col-md-6">
                <label for="exampleInputEmail1">Biblioteca</label>
                <input type="text" class="form-control"  placeholder="" disabled="disabled" value="@usuario.Biblioteca.Name">
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-md-6">
                <label for="exampleInputEmail1">Correo Electrónico</label>
                <input type="email" class="form-control" placeholder="" disabled="disabled" value="@usuario.Correo">
            </div>
            
        </div>
    </div>




    <div class="col-sm-12" style="height:30px;"></div>
    <!--Botones Limpiar, cancelar, guardar-->
    <div class=" col-md-3">
        <!--
        <div class="btn-toolbar">
            <button class="btn btn-primary" data-toggle="modal" data-target="#myModal">
                Eliminar
            </button>



        </div>
            -->
    </div>
    <div class="col-md-3">

    </div>

    <div class="col-md-3">
        <!--
        <button class="btn btn-primary" data-toggle="modal" data-target="#myModal" disabled>
            Guardar
        </button>
        -->
        @Html.ActionLink("Modificar", "ModifyAccount", "Account", new { id = @usuario.Id }, new { @class = "btn btn-primary" })
    </div>



    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title" id="myModalLabel">Confirmación</h4>
                </div>
                <div class="modal-body">
                    <div>
                        <label class="control-label">
                            <!--for="inputFechaInicio" class="control-label"-->
                            ¿Estas seguro que quieres guardar los
                        </label>
                        <label class="control-label">
                            cambios para este Empleado?
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Aceptar</button>
                </div>

            </div>
        </div>
    </div>
