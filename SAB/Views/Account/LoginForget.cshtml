@model SAB.Domain.User.UserAccount
@{
    ViewBag.Title = "Recuperación de contraseña";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-8">
        @if (TempData["message"] != null)
        {    <div class="alert alert-danger" role="alert">@TempData["message"]</div>}

        @using (Html.BeginForm("ForgetPasswordCorreo", "Account"))
        {

            

            <div class="form-group">
                
                <div class="col-md-8">
                   
                     
                                <label for="exampleInputEmail1">Correo Electrónico</label>
                                <input type="email" class="form-control" name="correo "value="" >
                            

                       
                   
                </div>
            </div>
            
            <div class="col-sm-12" style="height:30px;"></div>
            <div class="form-group">
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">
                        Enviar
                    </button>


                </div>


            </div>
            

        }

    </div>
</div>
