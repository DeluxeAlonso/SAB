@using Microsoft.AspNet.Identity
@model SAB.Models.ManageUserViewModel




    
<div class="row">
    <div class="col-md-12 title">
        <h1>Cambiar Contraseña</h1>
    </div>

</div>
<div class="col-md-10">
    @if (TempData["message"] != null)
    {
        <div class="alert alert-success" role="alert">@TempData["message"]</div>
    }
    @if (TempData["alert"] != null)
    {
        <div class="alert alert-danger" role="alert">@TempData["alert"]</div>
    }

</div>
@using (Html.BeginForm("Manage", "Account"))
{
    <div class="row">
        <div class="col-md-8">
          
            

            <div class="form-group">
                <div class="col-md-8">
                    <label for="exampleInputEmail1">Contraseña Actual</label>
                </div>
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control"  })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-8">
                    <label for="exampleInputEmail1">Nueva Contraseña</label>
                </div>
                <div class="col-md-8">
                    <input type="password" value="" name="newPassword" class="form-control" maxlength="15">
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-8">
                    <label for="exampleInputEmail1">Confirmar Nueva Contraseña</label>
                </div>
                <div class="col-md-8">
                    <input type="password" value="" name="confirmPassword" class="form-control" maxlength="15">
                </div>
            </div>

            <div class="col-sm-12" style="height:30px;"></div>
            <div class="form-group">
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">
                        Cambiar Contraseña
                    </button>


                </div>


            </div>
        </div>
            
        </div>
}
