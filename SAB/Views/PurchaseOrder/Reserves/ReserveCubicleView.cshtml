
@{
    ViewBag.Title = "Reservar nuevo cubículo";
}

<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
          <li>@Html.ActionLink("Home", "Index", "Home")</li>
          <li>@Html.ActionLink("Reservas", "Publications", "Reserves")</li>
          <li class="active">Reservar Cubículos</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-md-12 title">
        <h1>Reservar nuevo cubículo</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-10">
        <form action="/" method="post">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="from">Fecha:</label>
                        <input type="text" name="from" value=" " class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="hour">Hora:</label>
                        <select name="hour" class="form-control">
                            @for (int i = 0; i < 24; i++)
                            {
                                <option value="@i">@i:00</option> 
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-6">
                     <div class="form-group">
                        <label for="time">Tiempo:</label>
                        <select name="hour" class="form-control">
                            <option value="0">1h</option>
                            <option value="1">2h</option>
                            <option value="2">3h</option>
                        </select>
                    </div>
                    <div>
                        <label for="">&nbsp;</label>
                        <div>
                            <button class="btn btn-primary pull-right">Buscar</button>
                        </div>                   
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-10">
        
        <form action="@Url.Action("ReserveCubicle","Reserves")" method="post">
            <table class="table-responsive table table-stripped">
                <tr>
