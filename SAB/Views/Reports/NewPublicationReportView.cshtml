
@{
    ViewBag.Title = "NewPublicationReportView";
}


<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("Report", "NewPublicationReportView", "Report")</li>
            <li class="active">Publicaciones Nuevas</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-md-12 title">
        <h1>Reporte de Publicaciones Nuevas</h1>
    </div>
</div>

<div class="row">

    <div class="col-sm-10">
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success" role="alert">@TempData["message"]</div>
        }
        @if (TempData["alert"] != null)
        {
            <div class="alert alert-danger" role="alert">@TempData["alert"]</div>
        }
        <form action="@Url.Action("NewPublicationReportResult", "Reports")" class="form-horizontal" method="post" role="form">
            <div class="form-group">
                <div class="col-md-offset-2">
                    <h4>Fecha :</h4>
                </div>
                <div class="col-sm-10">
                    <div class="col-sm-10">
                        <label class="col-md-offset-4 col-sm-1">Desde</label>
                        <div class="col-sm-2">
                            <input type="date" name="fechaD" value="">
                        </div>
                    </div>
                    <div class="col-md-5"><label></label></div>
                    <div class="col-sm-10">
                        <label class="col-md-offset-4 col-sm-1">Hasta</label>
                        <div class="col-sm-2">
                            <input type="date" name="fechaH" value="">
                        </div>
                    </div>
                    <div class="col-md-5"><label></label></div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-1 ">
                    <button class="btn btn-primary pull-right">Limpiar</button>
                </div>
                <div class="col-sm-offset-1 col-sm-1">
                    <button type="submit" class="btn btn-primary pull-right"> <i class="glyphicon glyphicon-floppy-open"></i>     Consultar</button>
                </div>
            </div>

        </form>
    </div>

</div>