                </tr>

                <tr>
                    <td>00001</td>
                    <td>Daño a material</td>
                    <td>19/01/1993</td>
                    <td>19/01/1994</td>
                    <td>
                        <a href="@Url.Action("Detail", "TipoSancion", new { id = 2 })"><i class="margin-right-icon glyphicon glyphicon-zoom-in"></i></a>
                        <a href="@Url.Action("Modify", "TipoSancion", new { id = 2 })"><i class="margin-right-icon glyphicon glyphicon-pencil"></i></a>    
                        <a href="#"><i class="margin-right-icon glyphicon glyphicon-remove" data-toggle="modal" data-target="#deleteModal"></i></a>               

                    </td>
                </tr>
                <tr>
                    <td>00002</td>
                    <td>Tardanza en entrega</td>
                    <td>10/01/2013</td>
