
@{
    ViewBag.Title = "SearchResultTipoSancion";
}

<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("Políticas", "Index", "Home")</li>
            <li>@Html.ActionLink("Tipo de Sancion", "Buscar", "TipoSancion")</li>
            <li class="active">Buscar </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-md-12 title">
        <h1>Búsqueda de tipo de sanción</h1>

    </div>
</div>
<div class="col-md-10">
  @if (TempData["message"] != null)
    {
        <div class="alert alert-success" role="alert">@TempData["message"]</div>
    }
    @if (TempData["alert"] != null)
    {
        <div class="alert alert-danger" role="alert">@TempData["alert"]</div>
    }

</div>


<div class="col-md-6">
    <form action="@Url.Action("Search", "TipoSancion")" class="form-horizontal" method="post" role="form">

        <div class="form-group">
            <label for="searchText">Búsqueda por nombre</label>
            <input type="text" name="searchText" value=" " placeholder="Búsqueda ..." class="form-control">
        </div>



        <div class="form-group">
            <button class="btn btn-primary pull-right">Buscar</button>
        </div>
    </form>


</div>
  

<form action="@Url.Action("DetailView", "Suscripcion")" class="form-horizontal" method="post" role="form">
    <div class="col-md-10">
        <div class="row">

            <table class="table-responsive table table-striped">
                <tr>
                    <th class="cod">Cód. Tipo Sanción</th>
