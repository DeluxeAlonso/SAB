
@{
    ViewBag.Title = "Search";
}

<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("Políticas", "Index", "Home")</li>
            <li>@Html.ActionLink("Tipo de sanción", "Index", "Home")</li>
            <li class="active">Búsqueda</li>
        </ol>
    </div>
</div>


<div class="row">
    <div class="col-md-12 title">
        <h1>Búsqueda de Tipo de transacción</h1>
    </div>
</div>



<div class="col-md-6">
    @if (TempData["message"] != null)
    {
        <div class="alert alert-success" role="alert">@TempData["message"]</div>
    }
    @if (TempData["alert"] != null)
    {
        <div class="alert alert-danger" role="alert">@TempData["alert"]</div>
    }
    <form action="@Url.Action("SearchResult", "TipoSancion")" class="form-horizontal" method="post" role="form">

        <div class="form-group">
            <label for="searchText">Búsqueda por nombre</label>
            <input type="text" name="searchText" value=" " placeholder="Búsqueda ..." class="form-control">
        </div>



        <div class="form-group">
            <button class="btn btn-primary pull-right">Buscar</button>
        </div>
    </form>
</div>