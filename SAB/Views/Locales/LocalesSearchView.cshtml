
@{
    ViewBag.Title = "Buscar bibliotecas";
}

<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("Locales", "LocalesSearch", "Locales")</li>
            <li class="active">Búsqueda</li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-md-12 title">
        <h1>Búsqueda de  bilbioteca</h1>
    </div>
</div>
<div class="col-md-10">
    @if (TempData["message"] != null)
    {
        <div class="alert alert-success" role="alert">@TempData["message"]</div>
    }
    @if (TempData["alert"] != null)
    {
        <div class="alert alert-danger" role="alert">@TempData["alert"]</div>
    }
    <form action="@Url.Action("LocalesList", "Locales")" method="post">
    <div class=" form-group">
        <div class="row">
            <div class="col-md-6">
                <label for="tipo">Código:</label>
                <input type="text" name="Id" class="form-control">
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="searchText">Nombre:</label>
                    <input type="text" name="Name" class="form-control">
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-md-6">
                <label for="tipo">Ciudad:</label>
                <input type="text" name="City" class="form-control">
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="searchText">Distrito:</label>
                    <input type="text" name="Distric" class="form-control">
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-offset-10">
                <input type="submit" class="btn btn-primary pull-right" value="Buscar" />
                @*@Html.ActionLink("Buscar", "LocalesList", "Locales", new { id = 1 }, new { @class = "btn btn-primary pull-left" })*@
                </div>
            </div>
        </div>
        </form>
    </div>
