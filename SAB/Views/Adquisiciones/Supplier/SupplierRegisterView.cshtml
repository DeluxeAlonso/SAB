                    <input type="email" class="form-control" name="email" id="exampleInputEmail1" required="required" name="@s.Email">
                </div>

                <div class="col-md-6">
                    <label for="exampleInputEmail1">Dirección</label>
                    <input type="text" class="form-control"name="address" id="exampleInputEmail1" required="required" value="@s.Address">
                </div>
            </div>
        </div>



        
        <div class="col-sm-12" style="height:30px;"></div>
        <div class="form-group">

            <div class="col-md-4">
                <button type="submit" class="btn btn-primary pull-right">
