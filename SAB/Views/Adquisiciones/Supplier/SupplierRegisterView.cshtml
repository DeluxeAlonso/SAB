                    <input type="text" name ="contacto"class="form-control" id="exampleInputEmail1" required="required" value="@s.Contacto" >
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <label for="exampleInputEmail1">RUC</label>
                    <input type="text" class="form-control" name="ruc" id="exampleInputEmail1" required="required" value="@s.Ruc">
                </div>

                <div class="col-md-6">
                    <label for="exampleInputEmail1">Telefono</label>
                    <input type="text" class="form-control" name="telephone"id="exampleInputEmail1"required="required" value="@s.Telephone">
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
