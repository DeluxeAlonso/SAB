@{
    ViewBag.Title = "Buscar Proveedor";
}

<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("Proveedor", "SupplierSearch", "Supplier")</li>
            <li class="active">Buscar </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-md-12 title">
        <h1>Búsqueda de Proveedor</h1>
    </div>
</div>


@section Scripts
{
    <script src="@Url.Content("~/Scripts/UserAccount.js")"></script>



}

<div class="col-md-10">

    <form action="@Url.Action("SearchSupplierResult", "Supplier")" class="form-horizontal" method="post" role="form">
        <div class=" form-group">
            <div class="row">
                <div class="col-md-6">
                    <label for="exampleInputEmail1">Código</label>
                    <input type="number" class="form-control" id="exampleInputEmail1" placeholder="" min="1" max="200">
                </div>
                <div class="col-md-6">
                    <label for="exampleInputEmail1">RUC</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="" maxlength="11" pattern="[0-9]*" oninvalid="setCustomValidity('Please enter numbers')">
                </div>

            </div>
        </div>

       
        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <label for="exampleInputEmail1">Nombre</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="" maxlength="20" pattern="[A-Za-z ]*" oninvalid="setCustomValidity('Please enter letters')">
                </div>

                <div class="col-md-6">
                    <label for="exampleInputEmail1">Contacto</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="" maxlength="50" pattern="[A-Za-z ]*" oninvalid="setCustomValidity('Please enter letters')">
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <label for="searchText">Fecha de Registro desde:</label>
                    <input type="date" name="searchText" value=" " placeholder="Búsqueda ..." class="form-control">
                </div>
                <div class="col-md-6">
                    <label for="searchText">Fecha de Registro hasta:</label>
                    <input type="date" name="searchText" value=" " placeholder="Búsqueda ..." class="form-control">
                </div>
            </div>
        </div>






        <div class="col-sm-12" style="height:30px;"></div>
        <div class="form-group">
            <button class="btn btn-primary pull-right">Buscar</button>
        </div>
    </form>
</div>

