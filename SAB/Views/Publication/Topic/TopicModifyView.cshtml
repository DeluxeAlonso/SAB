@model SAB.Domain.Publication.Topic

@{
    ViewBag.Title = "Detail";
}

<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("Publicaciones", "Index", "Home")</li>
            <li>@Html.ActionLink("Tema", "TopicSearch", "Topic")</li>
            <li class="active">Detalle</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-md-12 title">
        <h1>Detalle del Tema</h1>
    </div>
</div>

@{
    SAB.Domain.Publication.Topic topic = Model;
}


<div class="row">
    @using (Html.BeginForm("Update", "Topic"))
    {   
        <div class="col-md-10">

            <div class="form-group">
                <div class="row">
                    <div class="col-md-1">
                    </div>
                    <div class="col-md-2">
                        <label for="tipo">Codigo</label>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input class="form-control" type="text" name="Id" id ="Id" value="@topic.Id" readonly>
                            <input class="form-control" type="text" name="Id" id="Id" value="@topic.Id" style="display:none">
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-1">
                    </div>
                    <div class="col-md-2">
                        <label for="tipo">Nombre</label>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input class="form-control" type="text" name="Name" id="Name" value="@topic.Name" pattern="[A-Za-zá-ú\s]+" title="Solo letras y espacios" required maxlength="50" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-1">
                    </div>
                    <div class="col-md-2">
                        <label for="tipo">Descripción</label>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input class="form-control" type="text" name="Description" id="Description" value="@topic.Description" pattern="[A-Za-zá-ú0-9\s]+" title="No se admite caracteres especiales" maxlength="50" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-9">
                    <button type="submit" class="btn btn-primary pull-right">Guardar</button>
                </div>
            </div>

        </div>
    }
</div>