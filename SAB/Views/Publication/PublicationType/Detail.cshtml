@model SAB.Domain.Publication.PublicationType
@{
    ViewBag.Title = "Detail";
}

<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("Tipo Publicacion", "Search", "PublicationType")</li>
            <li class="active">Detalle</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-md-12 title">
        <h1>Detalle Tipo de Publicación</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-10">
        <div class="col-md-10">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-1">
                    </div>
                    <div class="col-md-2">
                        <label for="tipo">Codigo</label>
                    </div>
                    <div class="col-md-7">
                        <div class="form-group">
                            <input class="form-control" type="text" name="Id" value="@Model.Id" readonly>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-1">
                    </div>
                    <div class="col-md-2">
                        <label for="tipo">Nombre</label>
                    </div>
                    <div class="col-md-7">
                        <div class="form-group">
                            <input class="form-control" type="text" name="Name" value="@Model.Name" readonly>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-1">
                    </div>
                    <div class="col-md-2">
                        <label for="tipo">Descripción</label>
                    </div>
                    <div class="col-md-7">
                        <div class="form-group">
                            <input class="form-control" type="text" name="Description" value="@Model.Description" readonly />
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="col-md-8">
            @Html.ActionLink("Modificar", "Modify", "PublicationType", new { id = Model.Id }, new { @class = "btn btn-primary pull-right" })
        </div>

    </div>
</div>
