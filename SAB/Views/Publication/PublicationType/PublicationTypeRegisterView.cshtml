@model SAB.Domain.Publication.PublicationType

@{
    ViewBag.Title = "Tipo Publicacion";
}

<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("Tipo Publicacion", "Search", "PublicationType")</li>
            <li class="active">Registrar</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-md-12 title">
        <h1>Registrar Tipo Publicación</h1>
    </div>
</div>
  
@using (Html.BeginForm("Save","PublicationType"))
{
    <div class="form-group">
        <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-2">
                <label for="tipo">Nombre</label>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <input type="text" class="form-control" name="Name" id="Name" pattern="[A-Za-záéíóú\s]+" title="Solo letras y espacios" required maxlength="50">
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>
        </div>
    </div>
    
    <div class="form-group">
        <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-2">
                <label for="tipo">Descripción</label>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <input type="text" class="form-control" name="Description" id="Description" pattern="[A-Za-záéíóú0-9\s]+" title="No se admite caracteres especiales" maxlength="50">
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-7">
        @Html.ActionLink("Cancelar", "Search", "PublicationType", new { @class = "btn btn-primary pull-right" })
    </div>
    
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary pull-right">Guardar</button>
    </div>
    

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title" id="myModalLabel">Confirmación</h4>
                </div>
                <div class="modal-body">
                    <div>
                        <label class="control-label">
                            <!--for="inputFechaInicio" class="control-label"-->
                            ¿Estas seguro que quieres
                        </label>
                        <label class="control-label">
                            registrar este Tipo de Publicación?
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary" >Aceptar</button>
                </div>

            </div>
        </div>
    </div>

}

