@model IEnumerable<SAB.Domain.Publication.PublicationItem>
@{
    ViewBag.Title = "Buscar Item";
}

<div class="row">
    <div class="col-md-12 title">
        <h1>Búsqueda Ítem</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("Publicaciones", "ItemSearchView", "Item")</li>
            <li>@Html.ActionLink("Item", "ItemRegisterView", "Item")</li>
            <li class="active">Buscar </li>
        </ol>
    </div>
</div>

@if (TempData["message"] != null)
{
    <div class="alert alert-success" role="alert">@TempData["message"]</div>
}
@if (TempData["alert"] != null)
{
    <div class="alert alert-danger" role="alert">@TempData["alert"]</div>
}

<div class="col-md-10">
    <div class="form-group">
        <div class="row">
            <div class="col-md-6">
                <label for="tipo">Tipo Publicacion</label>
                <select name="tipo" class="form-control">
                    <option value="0">Todas</option>
                    <option value="1">Revista</option>
                    <option value="2">Periódico</option>
                    <option value="3">Libro</option>
                </select>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="searchText">Cód. Item</label>
                    <input type="text" name="searchText" value=" " placeholder="Search..." class="form-control">
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-md-6">
                <label for="tipo">Título Publicación</label>
                <select name="titulo" class="form-control">
                    <option value="0">Seleccione</option>
                    <option value="1">Somos</option>
                    <option value="2">Caretas</option>
                    <option value="3">El Comercio</option>
                </select>
            </div>
            <div class="col-md-6">
                <label for="tipo">N° Recepción</label>
                <input type="number" name="searchText" value=" " placeholder="Search..." class="form-control">
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-md-6">
                <label for="tipo">Biblioteca</label>
                <select name="titulo" class="form-control">
                    <option value="0">Seleccione</option>
                    <option value="1">Biblioteca Central</option>
                    <option value="2">Biblioteca Secundaria</option>
                </select>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="searchText">Cód. Estante</label>
                    <input type="text" name="searchText" value=" " placeholder="Search..." class="form-control">
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-sm-12">
                <input type="button" class="btn btn-primary pull-right" value="Buscar" onclick="window.location.href = 'ItemSearchREsultView'"/>
            </div>
       </div>
    </div>
</div>

