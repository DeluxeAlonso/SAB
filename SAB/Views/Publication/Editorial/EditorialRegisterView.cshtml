
@{
    ViewBag.Title = "Registro de Editorial";
}

<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("Editorial", "EditorialSearch", "Editorial")</li>
            <li class="active">Registrar</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-md-12 title">
        <h1>Registro de Editorial</h1>
    </div>
</div>

@using (Html.BeginForm("Save", "Editorial"))
{
    <div class="form-group">
        <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-2">
                <label for="tipo">Razón Social</label>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <input type="text" class="form-control" name="Company_Name" id="Company_Name" pattern="[A-Za-zá-ú\s]+" title="Solo letras y espacios" required maxlength="50" />
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-2">
                <label for="tipo">RUC</label>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <input type="text" class="form-control" name="RUC" id="RUC" pattern="[0-9]{11}" title="Solo números de 11 digitos" required  size="11"/>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-7">
        @Html.ActionLink("Cancelar", "EditorialSearch", "Editorial", new { @class = "btn btn-primary pull-right" })
    </div>
    
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary pull-right">Guardar</button>
    </div>

}

