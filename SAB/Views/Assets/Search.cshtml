@using SAB.Domain.Assets
@{
    ViewBag.Title = "Buscar Activos";
}

<div class="row">
    <div class="col-md-12 title">
        <h1>Búsqueda Activos</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("Activos", "Search", "Assets")</li>
            <li class="active">Buscar </li>
        </ol>
    </div>
</div>
@{IEnumerable<TypeAsset> tipos = (IEnumerable<TypeAsset>)ViewData["tipoActivos"];}
<form action="@Url.Action("Search1","Assets")" method="post">
    <div class="col-md-10">
        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <label for="tipo">Código</label>
                    <input type="number" name="id" value="" min="1"  max="2000"class="form-control">
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="searchText">Tipo Activo</label>

                        <select name="assetType" class="form-control">
                            <option value="0">Seleccione</option>
                            @{ if (tipos != null) { 
                                    foreach (TypeAsset r in tipos)
                                    {

                                        <option value="@r.Id">@r.Name</option>
                                    }
                                }
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <label for="tipo">Fecha desde</label>
                    <input type="date" name="dateFrom" value="" placeholder="Search ..." class="form-control">
                </div>
                <div class="col-md-6">
                    <label for="tipo">Fecha hasta</label>
                    <input type="date" name="dateTo" value="" placeholder="Search ..." class="form-control">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-primary pull-right" >
                        Buscar
                     </button> 
</div>
            </div>
        </div>
    </div>
</form>